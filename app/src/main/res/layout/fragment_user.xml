<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eceaf2"
    android:orientation="vertical">
    <!--头部部分-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_40_dp"
        android:background="@color/colorNavigation"
        android:gravity="center"
        android:text="@string/main_tab_txt5"
        android:textColor="@color/color030303"
        android:textSize="@dimen/font_16_sp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rl_info"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:layout_marginTop="@dimen/space_12_dp"
                android:background="@drawable/home_item_press">

                <com.gk.mvp.view.custom.CircleImageView
                    android:id="@+id/iv_user_head"
                    android:layout_width="85dp"
                    android:layout_height="85dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/space_15_dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/my" />

                <TextView
                    android:id="@+id/tv_user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/space_15_dp"
                    android:layout_marginTop="@dimen/space_25_dp"
                    android:layout_toRightOf="@+id/iv_user_head"
                    android:gravity="center"
                    android:hint="用户名"
                    android:textColor="#302f30"
                    android:textSize="@dimen/font_16_sp" />

                <TextView
                    android:id="@+id/tv_user_level"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_user_name"
                    android:layout_marginLeft="@dimen/space_15_dp"
                    android:layout_marginTop="@dimen/space_6_dp"
                    android:layout_toRightOf="@+id/iv_user_head"
                    android:text="用户等级："
                    android:textColor="#808080"
                    android:textSize="@dimen/font_14_sp" />

                <ImageView
                    android:id="@+id/iv_level"
                    android:layout_width="@dimen/space_30_dp"
                    android:layout_height="@dimen/space_30_dp"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/tv_user_level"
                    android:paddingTop="@dimen/space_7_dp"
                    android:src="@drawable/ic_level3x" />

                <TextView
                    android:id="@+id/tv_user_score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_user_level"
                    android:layout_marginLeft="@dimen/space_15_dp"
                    android:layout_marginTop="@dimen/space_4_dp"
                    android:layout_toRightOf="@+id/iv_user_head"
                    android:hint="高考分数：未填写"
                    android:textColor="#808080"
                    android:textSize="@dimen/font_14_sp" />

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/space_16_dp"
                    android:src="@drawable/more" />

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/ll_wish_report"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginTop="@dimen/space_12_dp"
                android:background="@drawable/home_item_press"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/space_15_dp"
                android:paddingRight="@dimen/space_15_dp">

                <ImageView
                    android:layout_width="@dimen/space_30_dp"
                    android:layout_height="@dimen/space_30_dp"
                    android:layout_marginRight="@dimen/space_12_dp"
                    android:src="@drawable/ic_wish3x" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="志愿报告"
                    android:textColor="@color/color030303"
                    android:textSize="@dimen/font_16_sp" />

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_gravity="end|center_vertical"
                    android:src="@drawable/more" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_vip_choose"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginTop="@dimen/space_12_dp"
                android:background="@drawable/home_item_press"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/space_15_dp"
                android:paddingRight="@dimen/space_15_dp">

                <ImageView
                    android:layout_width="@dimen/space_30_dp"
                    android:layout_height="@dimen/space_30_dp"
                    android:layout_marginRight="@dimen/space_12_dp"
                    android:src="@drawable/ic_vip_choose3x" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="VIP智选"
                    android:textColor="@color/color030303"
                    android:textSize="@dimen/font_16_sp" />

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_gravity="end|center_vertical"
                    android:src="@drawable/more" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_zj"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginTop="@dimen/space_1_px"
                android:background="@drawable/home_item_press"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/space_15_dp"
                android:paddingRight="@dimen/space_15_dp">

                <ImageView
                    android:layout_width="@dimen/space_30_dp"
                    android:layout_height="@dimen/space_30_dp"
                    android:layout_marginRight="@dimen/space_12_dp"
                    android:src="@drawable/ic_zhuanjia3x" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="人工审核"
                    android:textColor="@color/color030303"
                    android:textSize="@dimen/font_16_sp" />

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_gravity="end|center_vertical"
                    android:src="@drawable/more" />
            </LinearLayout>

            <!--专家面对面-->
            <LinearLayout
                android:id="@+id/ll_zj_face_to_face"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginTop="@dimen/space_1_px"
                android:background="@drawable/home_item_press"
                android:clickable="true"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/space_15_dp"
                android:paddingRight="@dimen/space_15_dp">

                <ImageView
                    android:layout_width="@dimen/space_30_dp"
                    android:layout_height="@dimen/space_30_dp"
                    android:layout_marginRight="@dimen/space_12_dp"
                    android:src="@drawable/diamond" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="专家面对面"
                    android:textColor="@color/color030303"
                    android:textSize="@dimen/font_16_sp" />

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_gravity="end|center_vertical"
                    android:src="@drawable/more" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_help_center"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginTop="@dimen/space_12_dp"
                android:background="@drawable/home_item_press"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/space_15_dp"
                android:paddingRight="@dimen/space_15_dp">

                <ImageView
                    android:layout_width="@dimen/space_30_dp"
                    android:layout_height="@dimen/space_30_dp"
                    android:layout_marginRight="@dimen/space_12_dp"
                    android:src="@drawable/ic_help_center" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="帮助中心"
                    android:textColor="@color/color030303"
                    android:textSize="@dimen/font_16_sp" />

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_gravity="end|center_vertical"
                    android:src="@drawable/more" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_contact_kf"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginTop="@dimen/space_1_px"
                android:background="@drawable/home_item_press"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/space_15_dp"
                android:paddingRight="@dimen/space_15_dp">

                <ImageView
                    android:layout_width="@dimen/space_30_dp"
                    android:layout_height="@dimen/space_30_dp"
                    android:layout_marginRight="@dimen/space_12_dp"
                    android:src="@drawable/ic_contact_kf" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="联系客服"
                    android:textColor="@color/color030303"
                    android:textSize="@dimen/font_16_sp" />

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_gravity="end|center_vertical"
                    android:src="@drawable/more" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_set"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginBottom="@dimen/space_25_dp"
                android:layout_marginTop="@dimen/space_25_dp"
                android:background="@drawable/home_item_press"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/space_15_dp"
                android:paddingRight="@dimen/space_15_dp">

                <ImageView
                    android:layout_width="@dimen/space_30_dp"
                    android:layout_height="@dimen/space_30_dp"
                    android:layout_marginRight="@dimen/space_12_dp"
                    android:src="@drawable/ic_set" />

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="设置"
                    android:textColor="@color/color030303"
                    android:textSize="@dimen/font_16_sp" />

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_gravity="end|center_vertical"
                    android:src="@drawable/more" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>