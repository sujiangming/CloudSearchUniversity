<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite"
    android:orientation="horizontal"
    android:paddingBottom="12dp"
    android:paddingTop="12dp">

    <ImageView
        android:id="@+id/iv_logo"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:scaleType="centerCrop"
        android:src="@drawable/ysf_message_file_icon_mp4" />

    <TextView
        android:id="@+id/tv_university_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/iv_item"
        android:ellipsize="end"
        android:maxLines="1"
        android:paddingLeft="@dimen/space_16_dp"
        android:paddingRight="@dimen/space_16_dp"
        android:text="清华大学"
        android:textColor="@color/color353535"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tv_major_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_live_title"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/iv_item"
        android:ellipsize="end"
        android:maxLines="1"
        android:paddingLeft="@dimen/space_16_dp"
        android:paddingRight="@dimen/space_16_dp"
        android:text="金融工程"
        android:textColor="@color/color555555"
        android:textSize="16sp" />

    <ImageView
        android:layout_width="@dimen/space_35_dp"
        android:layout_height="@dimen/space_25_dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/right_arrow" />
</RelativeLayout>