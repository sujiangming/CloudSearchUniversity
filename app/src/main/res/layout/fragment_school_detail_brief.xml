<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBackground"
        android:orientation="vertical">

        <com.gk.mvp.view.custom.RichText
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_40_dp"
            android:background="@color/colorWhite"
            android:drawablePadding="@dimen/space_8_dp"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/space_10_dp"
            android:text="录取概率"
            app:drawable_height="@dimen/space_30_dp"
            app:drawable_src="@drawable/ic_shuxian_blue"
            app:drawable_width="@dimen/space_8_dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_1_px"
            android:background="@color/color19B4D4" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:background="@color/colorWhite"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_vip"
                android:layout_width="100dp"
                android:layout_height="@dimen/space_40_dp"
                android:background="@drawable/shool_mark"
                android:gravity="center"
                android:text="VIP特权"
                android:textColor="@color/colorWhite" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_12_dp"
                android:text="开通VIP后可以查看此校对你的录取概率"
                android:textColor="@color/color808080" />

        </LinearLayout>

        <com.gk.mvp.view.custom.RichText
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_40_dp"
            android:layout_marginTop="@dimen/space_12_dp"
            android:background="@color/colorWhite"
            android:drawablePadding="@dimen/space_8_dp"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/space_10_dp"
            android:text="招生简介"
            app:drawable_height="@dimen/space_30_dp"
            app:drawable_src="@drawable/ic_shuxian_blue"
            app:drawable_width="@dimen/space_8_dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_1_px"
            android:background="@color/color19B4D4" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite"
            android:gravity="center"
            android:orientation="vertical">

            <include
                android:id="@+id/expand_text_1"
                layout="@layout/text_item" />

        </LinearLayout>

        <com.gk.mvp.view.custom.RichText
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_40_dp"
            android:layout_marginTop="@dimen/space_12_dp"
            android:background="@color/colorWhite"
            android:drawablePadding="@dimen/space_8_dp"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/space_10_dp"
            android:text="学校简介"
            app:drawable_height="@dimen/space_30_dp"
            app:drawable_src="@drawable/ic_shuxian_blue"
            app:drawable_width="@dimen/space_8_dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_1_px"
            android:background="@color/color19B4D4" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingBottom="@dimen/space_16_dp">

            <include
                android:id="@+id/expand_text_2"
                layout="@layout/text_item" />

        </LinearLayout>
    </LinearLayout>

</ScrollView>