<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_12_dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_school_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:hint="清华大学"
            android:maxLines="1"
            android:paddingLeft="@dimen/space_12_dp"
            android:paddingRight="@dimen/space_12_dp"
            android:textColor="#302f30"
            android:textSize="@dimen/font_17_sp" />

        <TextView
            android:id="@+id/tv_school_address"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="right"
            android:maxLines="1"
            android:paddingRight="@dimen/space_12_dp"
            android:textColor="@color/color808080"
            android:textSize="@dimen/font_12_sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/space_10_dp"
        android:paddingTop="@dimen/space_10_dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/color808080"
            android:textSize="@dimen/font_12_sp" />

        <TextView
            android:id="@+id/tv_year_1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:hint="2015"
            android:textColor="@color/color808080"
            android:textSize="@dimen/font_12_sp" />

        <TextView
            android:id="@+id/tv_year_2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:hint="2016"
            android:textColor="@color/color808080"
            android:textSize="@dimen/font_12_sp" />

        <TextView
            android:id="@+id/tv_year_3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:hint="2017"
            android:textColor="@color/color808080"
            android:textSize="@dimen/font_12_sp" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/space_10_dp"
        android:paddingTop="@dimen/space_10_dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="文科"
            android:textColor="@color/color808080"
            android:textSize="@dimen/font_12_sp" />

        <TextView
            android:id="@+id/tv_wk_year_1_num"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:hint="0"
            android:textColor="@color/color808080"
            android:textSize="@dimen/font_12_sp" />

        <TextView
            android:id="@+id/tv_wk_year_2_num"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:hint="0"
            android:textColor="@color/color808080"
            android:textSize="@dimen/font_12_sp" />

        <TextView
            android:id="@+id/tv_wk_year_3_num"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:hint="0"
            android:textColor="@color/color808080"
            android:textSize="@dimen/font_12_sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_1_px"
        android:background="@color/color808080" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/space_10_dp"
        android:paddingTop="@dimen/space_10_dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="理科"
            android:textColor="@color/color808080"
            android:textSize="@dimen/font_12_sp" />

        <TextView
            android:id="@+id/tv_lk_year_1_num"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:hint="0"
            android:textColor="@color/color808080"
            android:textSize="@dimen/font_12_sp" />

        <TextView
            android:id="@+id/tv_lk_year_2_num"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:hint="0"
            android:textColor="@color/color808080"
            android:textSize="@dimen/font_12_sp" />

        <TextView
            android:id="@+id/tv_lk_year_3_num"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:hint="0"
            android:textColor="@color/color808080"
            android:textSize="@dimen/font_12_sp" />
    </LinearLayout>

</LinearLayout>