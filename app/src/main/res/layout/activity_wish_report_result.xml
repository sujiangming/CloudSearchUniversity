<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:orientation="vertical">

    <com.gk.mvp.view.custom.TopBarView
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/space_15_dp"
            android:background="@android:color/white"
            android:orientation="vertical"
            android:paddingBottom="@dimen/space_30_dp">

            <include layout="@layout/wish_report_result_0" />

            <include layout="@layout/wish_report_result_item" />

            <include layout="@layout/wish_report_result_item" />

            <include layout="@layout/wish_report_result_item" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="@dimen/space_18_dp"
                android:layout_marginTop="@dimen/space_40_dp"
                android:src="@drawable/my_wish_report_rz3x" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>