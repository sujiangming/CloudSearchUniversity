<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.gk.mvp.view.custom.TopBarView
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_1_px"
        android:layout_marginTop="@dimen/space_44_dp"
        android:background="@color/color353535" />

    <com.gk.mvp.view.custom.ProgressWebView
        android:id="@+id/progressWebView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="45dp">

    </com.gk.mvp.view.custom.ProgressWebView>

</android.support.constraint.ConstraintLayout>