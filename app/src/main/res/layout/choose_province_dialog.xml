<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color80000000"
    android:gravity="center_horizontal">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentBottom="true"
        android:background="@android:color/white">

        <TextView
            android:id="@+id/tv_cancel_province"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/space_15_dp"
            android:text="取消"
            android:textColor="@color/color808080"
            android:textSize="@dimen/font_16_sp" />

        <TextView
            android:id="@+id/tv_submit_province"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:padding="@dimen/space_15_dp"
            android:text="确定"
            android:textColor="@color/color4c90bf"
            android:textSize="@dimen/font_16_sp" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_below="@id/tv_cancel_province"
            android:layout_marginLeft="@dimen/space_15_dp"
            android:layout_marginRight="@dimen/space_15_dp"
            android:scrollbars="none">

            <LinearLayout
                android:id="@+id/lv_province"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

            </LinearLayout>
        </ScrollView>

    </RelativeLayout>

</RelativeLayout>