<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorFDFBF3"
    android:orientation="horizontal"
    android:paddingBottom="10dp"
    android:paddingTop="10dp">

    <ImageView
        android:id="@+id/iv_item"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ysf_message_file_icon_mp4" />

    <TextView
        android:id="@+id/tv_live_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/iv_item"
        android:ellipsize="end"
        android:maxLines="1"
        android:paddingLeft="@dimen/space_12_dp"
        android:paddingRight="@dimen/space_12_dp"
        android:text="直播视频01"
        android:textColor="@color/color353535"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tv_teacher"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_live_title"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/iv_item"
        android:ellipsize="end"
        android:maxLines="1"
        android:paddingLeft="@dimen/space_12_dp"
        android:paddingRight="@dimen/space_12_dp"
        android:text="讲师：德云社-郭德纲"
        android:textColor="@color/color555555"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_teacher"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/iv_item"
        android:ellipsize="end"
        android:maxLines="1"
        android:paddingLeft="@dimen/space_12_dp"
        android:paddingRight="@dimen/space_12_dp"
        android:text="时间：2017年06月30日 18:30"
        android:textColor="@color/color555555"
        android:textSize="16sp" />
</RelativeLayout>