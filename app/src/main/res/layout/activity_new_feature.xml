<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_new_feature"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v4.view.ViewPager>

    <LinearLayout
        android:id="@+id/ll_indication"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="40dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal"></LinearLayout>

    <!--进入云寻校按钮-->
    <LinearLayout
        android:id="@+id/ll_enter_app"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent"
        android:gravity="bottom|center_horizontal"
        android:orientation="vertical"
        android:paddingBottom="@dimen/space_50_dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/guide_ib_start"
            android:layout_width="100dp"
            android:layout_height="@dimen/space_35_dp"
            android:background="@drawable/shape_fragment_wish"
            android:gravity="center"
            android:text="立即体验"
            android:textColor="@color/color4c90bf"
            android:textSize="@dimen/font_14_sp"
            android:visibility="visible" />
    </LinearLayout>
</RelativeLayout>