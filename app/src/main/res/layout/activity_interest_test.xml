<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.gk.custom.TopBarView
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/colorBackground">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/interest3x" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/space_25_dp"
                android:layout_marginRight="@dimen/space_25_dp"
                android:layout_marginTop="@dimen/space_15_dp"
                android:drawableLeft="@drawable/line3x"
                android:drawablePadding="@dimen/space_7_dp"
                android:drawableRight="@drawable/line3x"
                android:gravity="center"
                android:maxLines="2"
                android:text="@string/interest_1"
                android:textColor="@color/color555555"
                android:textSize="@dimen/font_17_sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_10_dp"
                android:lineSpacingExtra="@dimen/space_5_dp"
                android:paddingLeft="@dimen/space_30_dp"
                android:paddingRight="@dimen/space_30_dp"
                android:text="@string/interest_2"
                android:textColor="@color/color808080"
                android:textSize="@dimen/font_14_sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_30_dp"
                android:background="@android:color/white"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingBottom="@dimen/space_20_dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingBottom="@dimen/space_7_dp"
                    android:paddingTop="@dimen/space_10_dp"
                    android:text="@string/interest_3"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/font_17_sp" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/mbti_blue_line3x" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="@dimen/space_5_dp"
                    android:paddingLeft="@dimen/space_30_dp"
                    android:paddingRight="@dimen/space_30_dp"
                    android:paddingTop="@dimen/space_15_dp"
                    android:text="@string/interest_4"
                    android:textColor="@color/color808080"
                    android:textSize="@dimen/font_14_sp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginTop="@dimen/space_25_dp"
                    android:clipChildren="false">

                    <TextView
                        android:layout_width="319dp"
                        android:layout_height="100dp"
                        android:layout_centerInParent="true"
                        android:layout_marginTop="@dimen/space_5_dp"
                        android:background="@drawable/shadow3x"
                        android:orientation="horizontal"
                        android:paddingLeft="77dp"
                        android:paddingRight="@dimen/space_13_dp"
                        android:paddingTop="@dimen/space_10_dp"
                        android:text="@string/interest_ys"
                        android:textColor="@color/color808080"
                        android:textSize="@dimen/font_14_sp">

                    </TextView>

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="@dimen/space_60_dp"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="@dimen/space_10_dp"
                        android:layout_marginVertical="@dimen/space_20_dp"
                        android:src="@drawable/interest_ys" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginTop="@dimen/space_25_dp"
                    android:clipChildren="false">

                    <TextView
                        android:layout_width="319dp"
                        android:layout_height="100dp"
                        android:layout_centerInParent="true"
                        android:layout_marginTop="@dimen/space_5_dp"
                        android:background="@drawable/shadow3x"
                        android:orientation="horizontal"
                        android:paddingLeft="77dp"
                        android:paddingRight="@dimen/space_13_dp"
                        android:paddingTop="@dimen/space_10_dp"
                        android:text="@string/interest_ct"
                        android:textColor="@color/color808080"
                        android:textSize="@dimen/font_14_sp">

                    </TextView>

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="@dimen/space_60_dp"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="@dimen/space_10_dp"
                        android:layout_marginVertical="@dimen/space_20_dp"
                        android:src="@drawable/interest_ct" />

                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginTop="@dimen/space_25_dp"
                    android:clipChildren="false">

                    <TextView
                        android:layout_width="319dp"
                        android:layout_height="100dp"
                        android:layout_centerInParent="true"
                        android:layout_marginTop="@dimen/space_5_dp"
                        android:background="@drawable/shadow3x"
                        android:orientation="horizontal"
                        android:paddingLeft="77dp"
                        android:paddingRight="@dimen/space_13_dp"
                        android:paddingTop="@dimen/space_10_dp"
                        android:text="@string/interest_yy"
                        android:textColor="@color/color808080"
                        android:textSize="@dimen/font_14_sp">

                    </TextView>

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="@dimen/space_60_dp"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="@dimen/space_10_dp"
                        android:layout_marginVertical="@dimen/space_20_dp"
                        android:src="@drawable/interest_yy" />

                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginTop="@dimen/space_25_dp"
                    android:clipChildren="false">

                    <TextView
                        android:layout_width="319dp"
                        android:layout_height="100dp"
                        android:layout_centerInParent="true"
                        android:layout_marginTop="@dimen/space_5_dp"
                        android:background="@drawable/shadow3x"
                        android:orientation="horizontal"
                        android:paddingLeft="77dp"
                        android:paddingRight="@dimen/space_13_dp"
                        android:paddingTop="@dimen/space_10_dp"
                        android:text="@string/interest_yj"
                        android:textColor="@color/color808080"
                        android:textSize="@dimen/font_14_sp">

                    </TextView>

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="@dimen/space_60_dp"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="@dimen/space_10_dp"
                        android:layout_marginVertical="@dimen/space_20_dp"
                        android:src="@drawable/interest_yj" />

                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginTop="@dimen/space_25_dp"
                    android:clipChildren="false">

                    <TextView
                        android:layout_width="319dp"
                        android:layout_height="100dp"
                        android:layout_centerInParent="true"
                        android:layout_marginTop="@dimen/space_5_dp"
                        android:background="@drawable/shadow3x"
                        android:orientation="horizontal"
                        android:paddingLeft="77dp"
                        android:paddingRight="@dimen/space_13_dp"
                        android:paddingTop="@dimen/space_10_dp"
                        android:text="@string/interest_xs"
                        android:textColor="@color/color808080"
                        android:textSize="@dimen/font_14_sp">

                    </TextView>

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="@dimen/space_60_dp"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="@dimen/space_10_dp"
                        android:layout_marginVertical="@dimen/space_20_dp"
                        android:src="@drawable/interest_xs" />

                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginTop="@dimen/space_25_dp"
                    android:clipChildren="false">

                    <TextView
                        android:layout_width="319dp"
                        android:layout_height="100dp"
                        android:layout_centerInParent="true"
                        android:layout_marginTop="@dimen/space_5_dp"
                        android:background="@drawable/shadow3x"
                        android:orientation="horizontal"
                        android:paddingLeft="77dp"
                        android:paddingRight="@dimen/space_13_dp"
                        android:paddingTop="@dimen/space_10_dp"
                        android:text="@string/interest_sh"
                        android:textColor="@color/color808080"
                        android:textSize="@dimen/font_14_sp">

                    </TextView>

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="@dimen/space_60_dp"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="@dimen/space_10_dp"
                        android:layout_marginVertical="@dimen/space_20_dp"
                        android:src="@drawable/interest_sh" />

                </RelativeLayout>
            </LinearLayout>

            <Button
                android:id="@+id/btn_mbti_test"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/space_12_dp"
                android:layout_marginLeft="@dimen/space_10_dp"
                android:layout_marginRight="@dimen/space_10_dp"
                android:layout_marginTop="@dimen/space_12_dp"
                android:background="@drawable/mbti_btn_bg3x"
                android:text="开始测试"
                android:textColor="@android:color/white"
                android:textSize="@dimen/font_20_sp" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>