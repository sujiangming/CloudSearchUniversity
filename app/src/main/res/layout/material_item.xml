<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorFDFBF3"
    android:orientation="horizontal"
    android:paddingBottom="10dp"
    android:paddingLeft="@dimen/space_12_dp"
    android:paddingRight="@dimen/space_12_dp"
    android:paddingTop="10dp">

    <ImageView
        android:id="@+id/iv_item"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ysf_message_file_icon_mp4" />

    <TextView
        android:id="@+id/tv_live_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/iv_item"
        android:ellipsize="end"
        android:maxLines="1"
        android:paddingLeft="@dimen/space_12_dp"
        android:paddingRight="@dimen/space_12_dp"
        android:text="资料标题"
        android:textColor="@color/color353535"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tv_type_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_live_title"
        android:layout_marginLeft="@dimen/space_12_dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/iv_item"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="类型："
        android:textColor="@color/color808080"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_type_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_live_title"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/tv_type_desc"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="历史真题"
        android:textColor="@color/color353535"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_km_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_live_title"
        android:layout_marginLeft="@dimen/space_12_dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/tv_type_content"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="科目："
        android:textColor="@color/color808080"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_km_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_live_title"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/tv_km_desc"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="历史真题"
        android:textColor="@color/color353535"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_time_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_type_content"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/iv_item"
        android:ellipsize="end"
        android:maxLines="1"
        android:paddingLeft="@dimen/space_12_dp"
        android:text="时间："
        android:textColor="@color/color808080"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_time_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_type_content"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/tv_time_desc"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="2017年06月30日 18:30"
        android:textColor="@color/color353535"
        android:textSize="16sp" />
</RelativeLayout>