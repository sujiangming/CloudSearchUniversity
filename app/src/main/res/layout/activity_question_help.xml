<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.gk.mvp.view.custom.TopBarView
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_1_px"
        android:background="@color/color808080" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/colorE1E2E4"
        android:orientation="vertical"
        android:padding="@dimen/space_12_dp">

        <ListView
            android:id="@+id/lv_help"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@color/colorE1E2E4"
            android:dividerHeight="@dimen/space_12_dp"
            android:scrollbars="none">

        </ListView>
    </LinearLayout>

</LinearLayout>