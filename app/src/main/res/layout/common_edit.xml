<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color80000000"
    android:gravity="center_horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="@dimen/space_20_dp"
        android:layout_marginRight="@dimen/space_20_dp"
        android:background="@drawable/border_radius_vip"
        android:orientation="vertical"
        android:paddingTop="@dimen/space_30_dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="设置个人信息"
            android:textColor="@color/color353535"
            android:textSize="@dimen/font_16_sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/space_15_dp"
            android:layout_marginTop="@dimen/space_5_dp"
            android:gravity="center"
            android:text="请选择您意向的高校"
            android:textColor="@color/color555555"
            android:textSize="@dimen/font_14_sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/space_15_dp"
            android:layout_marginRight="@dimen/space_15_dp"
            android:background="@drawable/wish_school_bg"
            android:orientation="vertical"
            android:padding="@dimen/space_1_dp">

            <EditText
                android:id="@+id/et_school_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/wish_school_edit"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:gravity="left"
                android:hint="意向高校一"
                android:inputType="text"
                android:padding="@dimen/space_10_dp"
                android:textColor="@color/color353535"
                android:textColorHint="@color/color808080"
                android:textCursorDrawable="@null"
                android:textSize="@dimen/font_16_sp" />

            <EditText
                android:id="@+id/et_school_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_1_px"
                android:background="@drawable/wish_school_edit"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:gravity="left"
                android:hint="意向高校二"
                android:inputType="text"
                android:padding="@dimen/space_10_dp"
                android:textColor="@color/color353535"
                android:textColorHint="@color/color808080"
                android:textCursorDrawable="@null"
                android:textSize="@dimen/font_16_sp" />

            <EditText
                android:id="@+id/et_school_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_1_px"
                android:background="@drawable/wish_school_edit"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:gravity="left"
                android:hint="意向高校三"
                android:inputType="text"
                android:padding="@dimen/space_10_dp"
                android:textColor="@color/color353535"
                android:textColorHint="@color/color808080"
                android:textCursorDrawable="@null"
                android:textSize="@dimen/font_16_sp" />

            <EditText
                android:id="@+id/et_school_4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_1_px"
                android:background="@drawable/wish_school_edit"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:gravity="left"
                android:hint="意向高校四"
                android:inputType="text"
                android:padding="@dimen/space_10_dp"
                android:textColor="@color/color353535"
                android:textColorHint="@color/color808080"
                android:textCursorDrawable="@null"
                android:textSize="@dimen/font_16_sp" />

            <EditText
                android:id="@+id/et_school_5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_1_px"
                android:background="@drawable/wish_school_edit"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:gravity="left"
                android:hint="意向高校五"
                android:inputType="text"
                android:padding="@dimen/space_10_dp"
                android:textColor="@color/color353535"
                android:textColorHint="@color/color808080"
                android:textCursorDrawable="@null"
                android:textSize="@dimen/font_16_sp" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_1_px"
            android:layout_marginTop="@dimen/space_12_dp"
            android:background="@color/color878787" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_49_dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_cancel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingBottom="@dimen/space_12_dp"
                android:paddingTop="@dimen/space_12_dp"
                android:text="取消"
                android:textColor="@color/color808080"
                android:textSize="@dimen/font_16_sp" />

            <TextView
                android:layout_width="@dimen/space_1_px"
                android:layout_height="match_parent"
                android:background="@color/color878787" />

            <TextView
                android:id="@+id/tv_submit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingBottom="@dimen/space_12_dp"
                android:paddingTop="@dimen/space_12_dp"
                android:text="确定"
                android:textColor="@color/color4c90bf"
                android:textSize="@dimen/font_16_sp" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>