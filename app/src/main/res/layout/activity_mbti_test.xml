<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.gk.mvp.view.custom.TopBarView
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/colorBackground">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="fitXY"
                android:src="@drawable/mbti" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/space_25_dp"
                android:layout_marginRight="@dimen/space_25_dp"
                android:layout_marginTop="@dimen/space_15_dp"
                android:drawableLeft="@drawable/line3x"
                android:drawablePadding="@dimen/space_7_dp"
                android:drawableRight="@drawable/line3x"
                android:gravity="center"
                android:maxLines="2"
                android:text=" 你知道你的性格适合的专业和职业是什么吗？"
                android:textColor="@color/color555555"
                android:textSize="@dimen/font_17_sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_10_dp"
                android:lineSpacingExtra="@dimen/space_5_dp"
                android:paddingLeft="@dimen/space_30_dp"
                android:paddingRight="@dimen/space_30_dp"
                android:text="@string/mbti_desc"
                android:textColor="@color/color808080"
                android:textSize="@dimen/font_14_sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_30_dp"
                android:background="@android:color/white"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingBottom="@dimen/space_20_dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingBottom="@dimen/space_7_dp"
                    android:paddingTop="@dimen/space_10_dp"
                    android:text="MBTI性格测试介绍"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/font_17_sp" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/mbti_blue_line3x" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="@dimen/space_5_dp"
                    android:paddingLeft="@dimen/space_30_dp"
                    android:paddingRight="@dimen/space_30_dp"
                    android:paddingTop="@dimen/space_15_dp"
                    android:text="@string/mbti_desc_1"
                    android:textColor="@color/color808080"
                    android:textSize="@dimen/font_14_sp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_marginTop="@dimen/space_25_dp"
                    android:gravity="center">

                    <TextView
                        android:layout_width="319dp"
                        android:layout_height="80dp"
                        android:layout_marginTop="@dimen/space_5_dp"
                        android:background="@drawable/shadow3x"
                        android:orientation="horizontal"
                        android:paddingLeft="77dp"
                        android:paddingRight="@dimen/space_13_dp"
                        android:paddingTop="@dimen/space_10_dp"
                        android:text="@string/mbti_qw"
                        android:textColor="@color/color808080"
                        android:textSize="@dimen/font_14_sp">

                    </TextView>

                    <TextView
                        android:layout_width="50dp"
                        android:layout_height="@dimen/space_60_dp"
                        android:layout_marginLeft="@dimen/space_15_dp"
                        android:background="@drawable/mbti_blue"
                        android:gravity="center"
                        android:text="权威"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/font_14_sp" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_marginTop="@dimen/space_25_dp"
                    android:gravity="center">

                    <TextView
                        android:layout_width="319dp"
                        android:layout_height="80dp"
                        android:layout_marginTop="@dimen/space_5_dp"
                        android:background="@drawable/shadow3x"
                        android:gravity="center_vertical"
                        android:lineSpacingExtra="@dimen/space_5_dp"
                        android:orientation="horizontal"
                        android:paddingLeft="77dp"
                        android:paddingRight="@dimen/space_13_dp"
                        android:text="@string/mbti_qx"
                        android:textColor="@color/color808080"
                        android:textSize="@dimen/font_14_sp">

                    </TextView>

                    <TextView
                        android:layout_width="50dp"
                        android:layout_height="@dimen/space_60_dp"
                        android:layout_marginLeft="@dimen/space_15_dp"
                        android:background="@drawable/mbti_zs"
                        android:gravity="center"
                        android:text="清晰"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/font_14_sp" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_marginTop="@dimen/space_25_dp"
                    android:gravity="center">

                    <TextView
                        android:layout_width="319dp"
                        android:layout_height="80dp"
                        android:layout_marginTop="@dimen/space_5_dp"
                        android:background="@drawable/shadow3x"
                        android:gravity="center_vertical"
                        android:lineSpacingExtra="@dimen/space_5_dp"
                        android:orientation="horizontal"
                        android:paddingLeft="77dp"
                        android:paddingRight="@dimen/space_13_dp"
                        android:text="@string/mbti_sy"
                        android:textColor="@color/color808080"
                        android:textSize="@dimen/font_14_sp">

                    </TextView>

                    <TextView
                        android:layout_width="50dp"
                        android:layout_height="@dimen/space_60_dp"
                        android:layout_marginLeft="@dimen/space_15_dp"
                        android:background="@drawable/mbti_deep_blue"
                        android:gravity="center"
                        android:text="实用"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/font_14_sp" />

                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/space_12_dp">

                <Button
                    android:id="@+id/btn_mbti_test"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/space_44_dp"
                    android:layout_weight="1"
                    android:background="@color/color19B4D4"
                    android:text="开始测试"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/font_20_sp" />

                <Button
                    android:id="@+id/btn_mbti_query"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/space_44_dp"
                    android:layout_marginLeft="@dimen/space_12_dp"
                    android:layout_weight="1"
                    android:background="@color/color808080"
                    android:text="查看结果"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/font_20_sp"
                    android:visibility="gone" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>