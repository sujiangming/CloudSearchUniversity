<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/space_10_dp"
    android:paddingTop="@dimen/space_10_dp">

    <TextView
        android:id="@+id/tv_my_wish_report"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/space_10_dp"
        android:text="我的志愿报告"
        android:textColor="#302f30"
        android:textSize="@dimen/font_17_sp" />

    <ImageView
        android:id="@+id/iv_blue_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_my_wish_report"
        android:scaleType="fitXY"
        android:src="@drawable/my_wish_result3x" />

    <TextView
        android:id="@+id/tv_student_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_blue_line"
        android:layout_marginTop="@dimen/space_10_dp"
        android:paddingLeft="@dimen/space_15_dp"
        android:text="姓名：   张三"
        android:textColor="@color/color808080"
        android:textSize="@dimen/font_12_sp" />

    <TextView
        android:id="@+id/tv_student_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_student_name"
        android:layout_marginTop="@dimen/space_5_dp"
        android:paddingLeft="@dimen/space_15_dp"
        android:text="生源地：  贵州"
        android:textColor="@color/color808080"
        android:textSize="@dimen/font_12_sp" />

    <TextView
        android:id="@+id/tv_student_score_and_rank"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_student_address"
        android:layout_marginTop="@dimen/space_5_dp"
        android:paddingLeft="@dimen/space_15_dp"
        android:text="成绩：  550分   28645名"
        android:textColor="@color/color808080"
        android:textSize="@dimen/font_12_sp" />

    <TextView
        android:id="@+id/tv_wen_li_ke"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_student_score_and_rank"
        android:layout_marginTop="@dimen/space_5_dp"
        android:paddingLeft="@dimen/space_15_dp"
        android:text="文理科：  理科"
        android:textColor="@color/color808080"
        android:textSize="@dimen/font_12_sp" />

    <TextView
        android:id="@+id/tv_wish_province"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_wen_li_ke"
        android:layout_marginTop="@dimen/space_5_dp"
        android:paddingLeft="@dimen/space_15_dp"
        android:text="意向省市：  北京、上海、山东"
        android:textColor="@color/color808080"
        android:textSize="@dimen/font_12_sp" />

    <TextView
        android:id="@+id/tv_wish_zy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_wish_province"
        android:layout_marginTop="@dimen/space_5_dp"
        android:paddingLeft="@dimen/space_15_dp"
        android:text="意向专业：  机械工程，电子，计算机"
        android:textColor="@color/color808080"
        android:textSize="@dimen/font_12_sp" />

    <TextView
        android:id="@+id/tv_mind_test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_wish_zy"
        android:layout_marginTop="@dimen/space_5_dp"
        android:paddingLeft="@dimen/space_15_dp"
        android:text="心理测试："
        android:textColor="@color/color808080"
        android:textSize="@dimen/font_12_sp" />

    <TextView
        android:id="@+id/tv_mind_test_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_wish_zy"
        android:layout_marginTop="@dimen/space_5_dp"
        android:layout_toRightOf="@id/tv_mind_test"
        android:text="  创新能力强，动手能力强，具有较强的逻辑思维能力"
        android:textColor="@color/color808080"
        android:textSize="@dimen/font_12_sp" />
</RelativeLayout>