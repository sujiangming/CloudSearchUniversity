<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.gk.mvp.view.custom.TopBarView
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:id="@+id/ll_account"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginTop="@dimen/space_20_dp"
        android:background="@drawable/home_item_press"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/space_15_dp"
        android:paddingRight="@dimen/space_15_dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="会员等级"
            android:textColor="@color/color030303"
            android:textSize="@dimen/font_17_sp" />

        <TextView
            android:id="@+id/tv_hy_level"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:text="普通会员"
            android:textColor="@color/color808080"
            android:textSize="@dimen/font_17_sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_about"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginTop="@dimen/space_20_dp"
        android:background="@drawable/home_item_press"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/space_15_dp"
        android:paddingRight="@dimen/space_15_dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="报告状态"
            android:textColor="@color/color030303"
            android:textSize="@dimen/font_17_sp" />

        <TextView
            android:id="@+id/tv_report_status"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:text="不能生成"
            android:textColor="@color/color808080"
            android:textSize="@dimen/font_17_sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_upgrate_vip"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_60_dp"
        android:layout_marginTop="@dimen/space_60_dp"
        android:background="@drawable/home_item_press"
        android:gravity="center"
        android:text="升级为VIP"
        android:textColor="@color/color030303"
        android:textSize="@dimen/font_17_sp" />
</LinearLayout>